{
  "name": "forge",
  "private": true,
  "engines": {
    "node": ">=20.16.0",
    "pnpm": "^9.6.0"
  },
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @forge/db push",
    "db:studio": "turbo -F @forge/db studio",
    "dev": "turbo watch dev --continue",
    "dev:blade": "turbo watch dev -F @forge/blade...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "devDependencies": {
    "@forge/eslint-config": "workspace:*",
    "@forge/prettier-config": "workspace:*",
    "@forge/tailwind-config": "workspace:*",
    "@forge/tsconfig": "workspace:*",
    "@turbo/gen": "^2.1.3",
    "prettier": "catalog:",
    "turbo": "^2.1.3",
    "typescript": "catalog:"
  },
  "prettier": "@forge/prettier-config",
  "overrides": {
    "@types/node": "^22.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "@tanstack/react-query": "^5.59.15",
      "@trpc/client": "^11.0.0-rc.477",
      "@trpc/react-query": "^11.0.0-rc.477",
      "@trpc/server": "^11.1.2",
      "eslint": "^9.12.0",
      "prettier": "^3.3.3",
      "tailwindcss": "^3.4.14",
      "typescript": "^5.6.3",
      "zod": "^3.25.20"
    },
    "catalogs": {
      "react18": {
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1"
      }
    }
  }
}
